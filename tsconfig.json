{
  "compilerOptions": {
    "target": "es2016", // which version of JS does TS compile to 
    "module": "commonjs", //syntax for modules 
    "outDir": "./dist", // directory for compiled files
    "rootDir": "./src", //root directory of source files
    "strict": true, // enable strict type checking
    "esModuleInterop": true // enable import/export syntax
  },
  "include": ["src/**/*", "test/**/*"], // specify which files to compile
  "exclude": ["node_modules"], // specify which files to ignore
  "types": ["jest", "node"]  // specify which types to include
}
